<form method="POST">

  <div class="form-group">
    <label>Intitulé</label>
    <input name="title"/>
  </div>


  <div class="form-group">
    <label>Bonne réponse</label>
    <input name="goodAnswer"/>
  </div>

  <div class="form-group">
    <label>Bad answer 1</label>
    <input name="badAnswer1"/>
  </div>

  <div class="form-group">
    <label>Bad answer 2</label>
    <input name="badAnswer2"/>
  </div>

  <div class="form-group">
    <label>Bad answer 3</label>
    <input name="badAnswer3"/>
  </div>

  <div class="form-group">
    <label>Indice</label>
    <input name="hint"/>
  </div>

  <div class="form-group">
    <label>Categorie</label>

    select(
      name="category"
    )
      each val in categories
        option(
          value= val.id
        )= val.name
  </div>

  <div class="form-group">
    <label>Difficulté</label>

    select(
      name="difficulty"
    )
      each val in difficulties
        option= val
  </div>

  <button type="submit">Valider</button>
</form>
